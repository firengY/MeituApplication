<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.firengy.meituapplication.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/guide1">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnCount="2"
            android:orientation="horizontal">

            <FrameLayout style="@style/style_frame_main"
                android:onClick="btnEnterMeihua">

                <ImageView
                    android:id="@+id/item_bg_main_meihua"
                    style="@style/style_wrap_center"
                    android:src="@drawable/item_bg_red" />

                <LinearLayout
                    style="@style/style_wrap_center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_icon_main_meihua"
                        style="@style/style_wrap_center"
                        android:src="@mipmap/icon_home_meihua" />

                    <TextView
                        android:id="@+id/item_text_main_meihua"
                        style="@style/style_wrap_center"
                        android:text="美化图片"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/style_frame_main">

                <ImageView
                    android:id="@+id/item_bg_main_meirong"
                    style="@style/style_wrap_center"
                    android:src="@drawable/item_bg_green" />

                <LinearLayout
                    style="@style/style_wrap_center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_icon_main_meirong"
                        style="@style/style_wrap_center"
                        android:src="@mipmap/icon_home_meirong" />

                    <TextView
                        android:id="@+id/item_text_main_meirong"
                        style="@style/style_wrap_center"
                        android:text="人像美容"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/style_frame_main">

                <ImageView
                    android:id="@+id/item_bg_main_pintu"
                    style="@style/style_wrap_center"
                    android:src="@drawable/item_bg_orange" />

                <LinearLayout
                    style="@style/style_wrap_center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_icon_main_pintu"
                        style="@style/style_wrap_center"
                        android:src="@mipmap/icon_home_pintu" />

                    <TextView
                        android:id="@+id/item_text_main_pintu"
                        style="@style/style_wrap_center"
                        android:text="拼图"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/style_frame_main">

                <ImageView
                    style="@style/style_wrap_center"
                    android:src="@drawable/item_bg_pink" />

                <LinearLayout
                    style="@style/style_wrap_center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_icon_main_camera"
                        style="@style/style_wrap_center"
                        android:src="@mipmap/icon_home_xiangji" />

                    <TextView
                        android:id="@+id/item_text_main_camera"
                        style="@style/style_wrap_center"
                        android:text="相机"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/style_frame_main">

                <ImageView
                    android:id="@+id/item_bg_main_materialcenter"
                    style="@style/style_wrap_center"
                    android:src="@drawable/item_bg_purple" />

                <LinearLayout
                    style="@style/style_wrap_center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_icon_main_materialcenter"
                        style="@style/style_wrap_center"
                        android:src="@mipmap/material_center_icon" />

                    <TextView
                        android:id="@+id/item_text_main_materialcenter"
                        style="@style/style_wrap_center"
                        android:text="素材中心"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout style="@style/style_frame_main">

                <ImageView
                    android:id="@+id/item_bg_main_instruction"
                    style="@style/style_wrap_center"
                    android:src="@drawable/item_bg_blue" />

                <LinearLayout
                    style="@style/style_wrap_center"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_icon_main_instruction"
                        style="@style/style_wrap_center"
                        android:src="@mipmap/btn_top_ad" />

                    <TextView
                        android:id="@+id/item_text_main_instruction"
                        style="@style/style_wrap_center"
                        android:text="使用攻略"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>
        </GridLayout>
    </RelativeLayout>
</layout>
